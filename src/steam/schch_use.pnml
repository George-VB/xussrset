     STR_PURCHASE_HINT_ENGINE_TYPE_FREIGHT_STEAM,
     STR_PURCHASE_HINT_SECTIONS_1,
     1918, 1924,
     fact_kharkiv(),
     fact_bryansk(),
     fact_luhansk(),
     string(STR_PURCHASE_HINT_FACTORY_NEVSKY),
     fact_putilovsky())
